<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:padding="15dp"
    android:background="@drawable/ic_rounded_corner"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_wrapper"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_image_bg">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:id="@+id/details_image"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_name"
        android:layout_below="@id/image_wrapper"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Saba Khukhunashvili"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_name"
        android:id="@+id/details_contrib"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_x"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/detail_exit"
        />


    
</RelativeLayout>